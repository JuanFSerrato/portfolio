---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Break from "../components/Break.astro";
import Title from "../components/Title.astro";
import Article from "../components/Article.astro";
import Button from "../components/Button.astro";

import { Image } from "astro:assets";
---

<Layout title="Juan S Porfolio">
  <Article class2="relative">
    <button id="theme" class="absolute w-10 h-10 right-0">
      <svg
        class="text-white bg-black dark:text-black dark:bg-white rounded-lg p-2"
        fill="currentColor"
        viewBox="0 0 16 16"
      >
        <path
          id="sun"
          class="hidden"
          d="M8 11a3 3 0 1 1 0-6 3 3 0 0 1 0 6m0 1a4 4 0 1 0 0-8 4 4 0 0 0 0 8M8 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 0m0 13a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 13m8-5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2a.5.5 0 0 1 .5.5M3 8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2A.5.5 0 0 1 3 8m10.657-5.657a.5.5 0 0 1 0 .707l-1.414 1.415a.5.5 0 1 1-.707-.708l1.414-1.414a.5.5 0 0 1 .707 0m-9.193 9.193a.5.5 0 0 1 0 .707L3.05 13.657a.5.5 0 0 1-.707-.707l1.414-1.414a.5.5 0 0 1 .707 0zm9.193 2.121a.5.5 0 0 1-.707 0l-1.414-1.414a.5.5 0 0 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .707M4.464 4.465a.5.5 0 0 1-.707 0L2.343 3.05a.5.5 0 1 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .708z"
        ></path>
        <path
          id="moon"
          class=""
          d="M6 .278a.768.768 0 0 1 .08.858 7.208 7.208 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277.527 0 1.04-.055 1.533-.16a.787.787 0 0 1 .81.316.733.733 0 0 1-.031.893A8.349 8.349 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.752.752 0 0 1 6 .278"
        ></path>
      </svg>
    </button>
    <Image
      class="min-w-[150px] min-h-[150px] border-solid border-[4px] rounded-full border-black shadow-[0px_0px_15px_black] dark:border-white dark:shadow-[0px_0px_15px_white]"
      src="/yo.jpeg"
      alt="Imagen del desarrollador"
      width="150"
      height="150"
    />
    <h1
      class="font-medium text-3xl text-purple-900 mt-4 dark:dark:text-purple-700"
    >
      Juan Serrato
    </h1>
    <p class="my-4">Desarrollador apasionado por el aprendizaje.</p>
    <div class="flex flex-wrap justify-center gap-4">
      <Button
        color="bg-[#0a66c2]"
        href="https://www.linkedin.com/in/juan-felipe-serrato-narvaez-10770b278/"
        title="LinkedIn"
        path="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401m-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4"
      />
      <Button
        color="bg-black"
        href="https://github.com/JuanFSerrato"
        title="GitHub"
        path="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8"
      />
      <Button
        color="bg-[#00a7a7]"
        href=""
        title="CV"
        path="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0M9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1M11 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0m2 5.755V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1v-.245S4 12 8 12s5 1.755 5 1.755"
      />
    </div>
  </Article>

  <Break />

  <Article class2=" ">
    <Title
      title="Experiencia"
      path="M6.5 1A1.5 1.5 0 0 0 5 2.5V3H1.5A1.5 1.5 0 0 0 0 4.5v1.384l7.614 2.03a1.5 1.5 0 0 0 .772 0L16 5.884V4.5A1.5 1.5 0 0 0 14.5 3H11v-.5A1.5 1.5 0 0 0 9.5 1zm0 1h3a.5.5 0 0 1 .5.5V3H6v-.5a.5.5 0 0 1 .5-.5"
      path2="M0 12.5A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5V6.85L8.129 8.947a.5.5 0 0 1-.258 0L0 6.85z"
    />

    <p class="my-5">
      Estoy en busca de mi primer trabajo por lo que aun no cuento con
      experiencia laboral.
    </p>
  </Article>

  <Break />

  <Article class2=" ">
    <Title
      title="Proyectos"
      path="M7.84 4.1a.178.178 0 0 1 .32 0l.634 1.285a.18.18 0 0 0 .134.098l1.42.206c.145.021.204.2.098.303L9.42 6.993a.18.18 0 0 0-.051.158l.242 1.414a.178.178 0 0 1-.258.187l-1.27-.668a.18.18 0 0 0-.165 0l-1.27.668a.178.178 0 0 1-.257-.187l.242-1.414a.18.18 0 0 0-.05-.158l-1.03-1.001a.178.178 0 0 1 .098-.303l1.42-.206a.18.18 0 0 0 .134-.098z"
      path2="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1z"
    />
    <Card
      title="Lorem 1"
      href="https://www.google.com/?hl=es"
      body="Aqui irá una descripción sobre el proyecto desarollado."
      img="/Inventario.jpg"
      alt="Imagen sobre Lorem"
    />

    <Card
      title="Lorem 2"
      href="https://www.google.com/?hl=es"
      body="Aqui irá una descripción sobre el proyecto desarollado."
      img="/Inventario.jpg"
      alt="Imagen sobre Lorem"
    />

    <Card
      title="Lorem 3"
      href="https://www.google.com/?hl=es"
      body="Aqui irá una descripción sobre el proyecto desarollado."
      img="/Inventario.jpg"
      alt="Imagen sobre Lorem"
    />
  </Article>

  <Break />

  <Article class2=" ">
    <Title
      title="Contacto"
      path2="M2 2a2 2 0 0 0-2 2v8.01A2 2 0 0 0 2 14h5.5a.5.5 0 0 0 0-1H2a1 1 0 0 1-.966-.741l5.64-3.471L8 9.583l7-4.2V8.5a.5.5 0 0 0 1 0V4a2 2 0 0 0-2-2zm3.708 6.208L1 11.105V5.383zM1 4.217V4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v.217l-7 4.2z"
      path="M14.247 14.269c1.01 0 1.587-.857 1.587-2.025v-.21C15.834 10.43 14.64 9 12.52 9h-.035C10.42 9 9 10.36 9 12.432v.214C9 14.82 10.438 16 12.358 16h.044c.594 0 1.018-.074 1.237-.175v-.73c-.245.11-.673.18-1.18.18h-.044c-1.334 0-2.571-.788-2.571-2.655v-.157c0-1.657 1.058-2.724 2.64-2.724h.04c1.535 0 2.484 1.05 2.484 2.326v.118c0 .975-.324 1.39-.639 1.39-.232 0-.41-.148-.41-.42v-2.19h-.906v.569h-.03c-.084-.298-.368-.63-.954-.63-.778 0-1.259.555-1.259 1.4v.528c0 .892.49 1.434 1.26 1.434.471 0 .896-.227 1.014-.643h.043c.118.42.617.648 1.12.648m-2.453-1.588v-.227c0-.546.227-.791.573-.791.297 0 .572.192.572.708v.367c0 .573-.253.744-.564.744-.354 0-.581-.215-.581-.8Z"
    />

    <div class="relative flex justify-center items-end w-[100%] mt-6">
      <div class="w-[40%]">
        <div class="h-6 block"></div>
        <input
          disabled
          id="email"
          class="bg-zinc-300 dark:bg-zinc-600 p-2 rounded-lg w-[100%]"
          type="text"
          value="juanfe.serratona@ecci.edu.co"
        />
      </div>

      <div class="flex justify-center items-center flex-col group mx-4">
        <p
          class="opacity-0 absolute rounded-md mb-4 bg-violet-700 p-1 bottom-8 pointer-events-none
      transition-opacity ease-in duration-300
      before:content-['']
      before:bg-violet-700
      before:absolute
      before:w-2.5
      before:rotate-45
      before:h-2.5
      before:-bottom-1
      before:-z-10
      before:left-1/2
      before:-translate-x-1/2
      group-hover:opacity-100"
        >
          Enviar email
        </p>
        <a href="mailto:juanfe.serratona@ecci.edu.co" rel="nooperer">
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 16 16">
            <path
              d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576zm6.787-8.201L1.591 6.602l4.339 2.76z"
            ></path>
          </svg></a
        >
      </div>

      <div class="flex justify-center items-center flex-col group">
        <p
          id="p_text"
          class="opacity-0 absolute rounded-md mb-4 bg-violet-700 p-1 bottom-8 pointer-events-none
      transition-opacity ease-in duration-300
      before:content-['']
      before:bg-violet-700
      before:absolute
      before:w-2.5
      before:rotate-45
      before:h-2.5
      before:-bottom-1
      before:-z-10
      before:left-1/2
      before:-translate-x-1/2
      group-hover:opacity-100"
        >
          Copiar email
        </p>
        <button id="btnCopy">
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 16 16">
            <path
              d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0z"
            ></path>

            <path
              d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1z"
            ></path>
          </svg>
        </button>
      </div>
    </div>
  </Article>

  <script>
    const boton = document.getElementById("theme"),
      sun = document.getElementById("sun"),
      moon = document.getElementById("moon"),
      boton2 = document.getElementById("btnCopy"),
      copyText = document.getElementById("p_text");

    boton.addEventListener("click", changeTheme);
    boton2.addEventListener("click", copyEmail);

    function changeTheme() {
      document.documentElement.classList.toggle("dark");
      sun.classList.toggle("hidden");
      moon.classList.toggle("hidden");
    }

    function copyEmail() {
      let texto = document.getElementById("email") as HTMLInputElement;
      navigator.clipboard.writeText(texto.value);
      copyText.innerText = "Copiado!";
      setTimeout(() => {
        copyText.innerText = "Copiar email";
      }, 1000);
    }
  </script>
</Layout>
